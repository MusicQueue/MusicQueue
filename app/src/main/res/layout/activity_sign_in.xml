<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.SignInActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="64dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/ic_launcher_icon_blue_foreground"
                tools:srcCompat="@drawable/ic_launcher_icon_blue_foreground" />

            <TextView
                android:id="@+id/title_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:fontFamily="@font/lexend_deca"
                android:text="@string/title_sign_in"
                android:textAlignment="center"
                android:textColor="@color/colorFontLight"
                android:textSize="36sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/email_password_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="16sp"
                android:fontFamily="@font/lexend_deca"
                android:text="@string/email_password"
                android:textColor="@color/colorPrimary"
                app:cornerRadius="5dp" />

            <LinearLayout
                android:id="@+id/google_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="16sp"
                android:background="@drawable/linear_layout_rounded_corners"
                android:backgroundTint="@color/colorFontLight"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="6sp"
                android:paddingBottom="6sp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/google_sign_in"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_google_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/google_sign_in"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>